{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"target": "es2018",
		"lib": ["es2018"]
	},
	"include": [
		"*.d.ts",
		"src/**/*"
	]
}
